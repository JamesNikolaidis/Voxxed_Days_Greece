<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/facebook_dialog_layout">

    <TextView
        android:id="@+id/facebook_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:hint="Add your photo"
        android:paddingLeft="5dp"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/user_facebook_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:onClick=""
        android:layout_below="@+id/facebook_text"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/speaker_profile_image_shape"
        android:src="@drawable/add_picture_via_camera" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_below="@+id/user_facebook_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/facebook_share"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tweet_shape"
            android:text="Share"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>