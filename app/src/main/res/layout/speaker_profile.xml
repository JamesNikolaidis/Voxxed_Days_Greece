<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/speaker_profile_image_shape"
    >

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="200dp"
    android:layout_marginTop="8dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:id="@+id/speaker_profile_image"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="speaker_name"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/speaker_name"
        android:layout_gravity="center"
     />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Biography:"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/speaker_biography"
        android:textSize="17sp"
        android:text="The biography sits here"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Speach:"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/speaker_speach"
        android:textSize="17sp"
        android:layout_marginLeft="5dp"
        android:text="The speach is here"
        android:textColor="#002269"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
</ScrollView>